#tooltip {
	position: absolute;
	z-index: 3000;
	border: 1px solid #111;
	background-color: #eee;
	padding: 5px;
	opacity: 0.85;
}
#tooltip h3, #tooltip div { margin: 0;
	font-family:	Arial,Helvetica,sans-serif!important;
	font-size:		12px!important;
	color:			#fff!important;	
	}

#tooltip.pretty {
	border: 		none;
	width: 			296px;
	padding:		10px 20px;
	height: 		83px;
	background: 	url('../images/shadow.png');
}
