<?xml version="1.0" encoding="UTF-8"?>
<!--
    The "bighorn" skin is intended to be used as the new basis for custom skin development, replacing the existing
    "default", "classic" and "text" skins.  This skin has several improvements over the existing skins, including:
    
    1) Cleaner skin files which use more advanced CSS selectors for reduced file sizes
    2) Built-in custom CSS files for more straightforward customization
    3) A 100% CSS-based solution for multilevel menus.
    
    This skin utilizes more complex CSS selectors in fewer CSS files for an overall reduction in the amount of
    CSS.  This combined with the lack of Javascript usage in the skin is intended to provide a more malleable
    and more easily customizable skin.
-->
<skin 
    xmlns="http://www.bea.com/servers/portal/framework/laf/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.bea.com/servers/portal/framework/laf/1.0.0 laf-skin-1_0_0.xsd"
>
    <target-skeleton>
        <skeleton-id>cablevision</skeleton-id>
    </target-skeleton>
    <images>
        <search-path>
            <path-element>images</path-element>
        </search-path>
    </images>
    <render-dependencies>
        <html>
            <links>
                <search-path>
                    <path-element>css</path-element>
                </search-path>
                <link rel="stylesheet" href="screenfix.css" type="text/css" media="screen, projection" />
				<link rel="stylesheet" href="print.css" type="text/css" media="print"/>	
				<link rel="stylesheet" href="layout.css" type="text/css" media="screen, projection"/>
				<link rel="stylesheet" href="ui.css" type="text/css" media="screen, projection"/>
				<link rel="stylesheet" href="thickbox.css" type="text/css" media="screen, projection"/>
            </links>
            <scripts>
                <search-path>
                    <path-element>js</path-element>
                </search-path>
            </scripts>
        </html>
    </render-dependencies>
</skin>
